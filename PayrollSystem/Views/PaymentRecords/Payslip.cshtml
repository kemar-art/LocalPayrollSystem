@model PaymentDetailVM

@{
    ViewBag.Titel = "Payslip";
}

@{
    Layout = null;
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">

<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <div class="container-fluid d-flex justify-content-between">
                    <div class="col-md-3 p-l-0">
                        <p class="mt-5 mb-2"><strong>Kemar's Enterprise LTD.</strong></p>
                        <p>7 Heaven View ST, Building77</p>
                    </div>
                    <div class="col-md-3 p-r-0">
                        <p class="mt-5 mb-2 text-right"><strong>Pay Date:@Model.PayDate.ToString("dd/MM/yyyy")</strong></p>
                        <p class="text-right"> </p>
                    </div>
                </div>
                <br />
                <div class="col-md-12 row">
                    <div class="col-md-4">
                        <h5>
                            Employee's Name: @Model.FullName
                        </h5>
                    </div>
                    <div class="col-md-4">
                        <h5>
                            N.I.S Number: @Model.NISNum
                        </h5>
                    </div>
                    <div class="col-md-4">
                        <h5>
                            T.R.N Number: @Model.TRNNum
                        </h5>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 table-responsive-md">
                    <table class="table table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>Earnings</th>
                                <th>Hours</th>
                                <th>Rates</th>
                                <th>Amount</th>
                                <th>Deductions</th>
                                <th>Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><b>Basic :</b></td>
                                <td>@Model.ContractualHours.ToString("f")</td>
                                <td>@Model.HourlyRate.ToString("f")</td>
                                <td>@Model.ContractualEarnings.ToString("c")</td>
                                <td>N.I.S Tax:</td>
                                <td>@Model.NISTax.ToString("c")</td>
                            </tr>
                            <tr>
                                <td><b>Overtime :</b></td>
                                <td>@Model.OvertimeHours.ToString("f")</td>
                                <td>@Model.OvertimeRate.ToString("f2")</td>
                                <td>@Model.OvertimeEarnings.ToString("c")</td>
                                <td>EDU Tax</td>
                                <td>@Model.EDUTax.ToString("c")</td>
                            </tr>
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td>N.H.T Tax</td>
                                <td>@Model.NHTTax.ToString("c")</td>

                            </tr>
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td>Incom Tax</td>
                                <td>@Model.IncomTax.ToString("c")</td>
                            </tr>
                            <tr>
                                <td><b>Total</b></td>
                                <td>@Model.HoursWorked</td>
                                <td></td>
                                <td>@Model.TotalEarnings.ToString("c")</td>
                                <td>Total Deduction</td>
                                <td>@Model.TotalDeduction.ToString("c")</td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td class="table-dark"><b>Net Salary :</b></td>
                                <td class="table-dark"">@Model.NetSalary.ToString("c")</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>