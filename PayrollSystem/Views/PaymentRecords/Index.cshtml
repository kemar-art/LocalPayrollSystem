@model IEnumerable<PaymentIndexVM>

@{
    ViewBag.Titel = "Payment Recards";
}

<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Payroll List</li>
                    </ol>
                </nav><br /><br />
                <div class="row">
                    <div class="col-md-12 table-responsive-md">
                        @*<a class="btn btn-xl btn-outline-success float-md-start" asp-action="Create">Add Pay</a>*@
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Employee</th>
                                    <th>Pay Date</th>
                                    <th>Month</th>
                                    <th>Tax Year</th>
                                    <th>Total Earnings </th>
                                    <th>Total Deduction</th>
                                    <th>Net Salary</th>
                                    @*<th>Attrition Date</th>
                                    <th class="text-warning">Actions</th>*@
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <a asp-action="Detail" asp-route-id="@item.Id">
                                                @item.FullName
                                            </a>
                                        </td>
                                        <td>
                                            @item.PayDate.ToString("dd/MM/yyyy")
                                        </td>
                                        <td>@item.PayMonth</td>
                                        <td>@item.Year</td>
                                        <td>@item.TotalEarnings.ToString("C")</td>
                                        <td>@item.TotalDeduction.ToString("C")</td>
                                        <td>@item.NetSalary.ToString("C")</td>
                                        @*<td>@item.DateTerminated.ToString("dd/MM/yyyy")</td>*@
                                        <td>
                                            <a class="btn btn-primary btn-rounded" asp-action="Payslip" asp-route-id="@item.Id">
                                                @*<i class="fa-solid fa-pen-to-square"></i>*@
                                                <i class="fa-solid fa-file-invoice-dollar"></i> Preview Payslip
                                            </a> &nbsp;
                                            <a class="btn btn-info btn-rounded" asp-action="PayslipPDF" asp-route-id="@item.Id">
                                                <i class="fa-solid fa-file-pdf"></i> Payslip PDF
                                            </a>
                                            @*<a class="btn btn-primary btn-rounded" asp-action="Edit" asp-route-id="@item.Id">
                                                <i class="fa-solid fa-pen-to-square"></i> Edit
                                            </a> &nbsp;
                                            <a class="btn btn-info btn-rounded" asp-action="Detail" asp-route-id="@item.Id">
                                                <i class="fa-solid fa-circle-info"></i> Detail
                                            </a> &nbsp;
                                            <a class="btn btn-danger btn-rounded" asp-action="Delete" asp-route-id="@item.Id">
                                                <i class="fa-solid fa-trash-can"></i> Delete
                                        </a>*@
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
